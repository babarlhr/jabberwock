<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <we3-dropdown t-name="we3.buttons.forecolor" name="Color" data-plugin="ForeColor">
        <we3-toggler title="Color">
            <we3-placeholder/>
            <i class="fa fa-font"></i>
        </we3-toggler>
        <we3-items>
            <we3-button name="color-reset" data-method="reset">Reset to default</we3-button>
            <we3-palettes/>
        </we3-items>
    </we3-dropdown>

    <we3-dropdown t-name="we3.buttons.bgcolor" name="Background color" data-plugin="BgColor">
        <we3-toggler title="Background color">
            <we3-placeholder/>
            <i class="fa fa-paint-brush"></i>
        </we3-toggler>
        <we3-items>
            <we3-button name="color-reset" data-method="reset">Reset to default</we3-button>
            <we3-palettes/>
        </we3-items>
    </we3-dropdown>

</templates>
