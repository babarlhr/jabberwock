<templates>
    <devtools-tree t-name="TreeComponent">
        <div class="element root">
            <span class="element-name">root</span>
            <div class="children">
                <t t-foreach="root.children" t-as="child">
                    <t t-call="childrenTemplate"/>
                </t>
            </div>
        </div>
    </devtools-tree>

    <t t-name="childrenTemplate" class="children">
        <t t-if="child.value">
            <span><t t-esc="child.value"/></span>
        </t>
        <t t-else="">
            <div class="element folded">
                <span class="element-name" t-on-click="onClickElement">
                    <t t-esc="child.type and child.type.toLowerCase()"/>
                </span>
                <div class="children">
                    <t t-foreach="child.children" t-as="child">
                        <t t-call="childrenTemplate"/>
                    </t>
                </div>
            </div>
        </t>
    </t>

    <jw-devtools t-name="devtools" class="closed">
        <devtools-navbar t-on-click="toggleOpen">
            <button>Inspector</button>
        </devtools-navbar>
        <devtools-contents>
            <TreeComponent/>
            <devtools-sidepane>
                <div class="about">
                    <div class="type"></div>
                </div>
                <div class="properties"></div>
            </devtools-sidepane>
        </devtools-contents>
    </jw-devtools>
</templates>
