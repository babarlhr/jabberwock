<templates>
    <devtools-tree t-name="TreeComponent">
        <span class="element-name root">root</span>
        <div class="children">
            <t t-foreach="root.children" t-as="child">
                <t t-call="childrenTemplate"/>
            </t>
        </div>
    </devtools-tree>

    <t t-name="childrenTemplate" class="children">
        <t t-if="child.value">
            <span><t t-esc="child.value"/></span>
        </t>
        <t t-else="">
            <span class="element-name">
                <t t-esc="child.type and child.type.toLowerCase()"/>
            </span>
            <div class="children">
                <t t-foreach="child.children" t-as="child">
                    <t t-call="childrenTemplate"/>
                </t>
            </div>
        </t>
    </t>

    <jw-devtools t-name="devtools">
        <devtools-navbar class="closed">
            <button>Inspector</button>
        </devtools-navbar>
        <devtools-contents>
            <TreeComponent/>
            <devtools-sidepane>
                <div class="about">
                    <div class="type"></div>
                </div>
                <div class="properties"></div>
            </devtools-sidepane>
        </devtools-contents>
    </jw-devtools>
</templates>
