<templates>
    <devtools-node t-name="TreeComponent"
        t-att-class="{
            element: props.vNode.length and !props.vNode.value,
            folded: state.folded,
            root: props.isRoot,
            &quot;self-closing&quot;: props.vNode.length == 0
        }">
        <t t-if="props.isRoot">
            <span class="element-name">root</span>
            <div class="children">
                <TreeComponent
                    t-foreach="props.vNode.children" t-as="child"
                    t-key="child.id"
                    vNode="child"/>
            </div>
        </t>
        <t t-else="">
            <span t-if="props.vNode.value"><t t-esc="name"/></span>
            <t t-else="">
                <span t-attf-class="element-name" t-on-click="onClickElement">
                    <t t-esc="name"/>
                </span>
                <div class="children">
                    <TreeComponent
                        t-foreach="props.vNode.children" t-as="child"
                        t-key="child.id"
                        vNode="child"/>
                </div>
            </t>
        </t>
    </devtools-node>

    <jw-devtools t-name="devtools" class="closed">
        <devtools-navbar t-on-click="toggleOpen">
            <button>Inspector</button>
        </devtools-navbar>
        <devtools-contents>
            <devtools-tree>
                <TreeComponent vNode="env.editor.vDocument.contents" isRoot="true"/>
            </devtools-tree>
            <devtools-sidepane>
                <div class="about">
                    <div class="type"></div>
                </div>
                <div class="properties"></div>
            </devtools-sidepane>
        </devtools-contents>
    </jw-devtools>
</templates>
